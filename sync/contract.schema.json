{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KfW Design Tokens Transformation Contract",
  "description": "Metadata tracking transformations from source tokens to Figma format, enabling bidirectional sync",
  "type": "object",
  "required": ["version", "generated", "transforms"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Contract schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generated": {
      "type": "string",
      "description": "ISO-8601 timestamp of contract generation",
      "format": "date-time"
    },
    "basePxFontSize": {
      "type": "number",
      "description": "Base pixel font size used for transformations (e.g., 16)"
    },
    "theme": {
      "type": "string",
      "description": "Theme name (e.g., 'light', 'dark')"
    },
    "transforms": {
      "type": "object",
      "description": "Map of Figma token paths to transformation metadata",
      "patternProperties": {
        ".*": {
          "type": "object",
          "required": ["sourcePath", "sourceFile"],
          "properties": {
            "sourcePath": {
              "type": "string",
              "description": "Original token path in source file (e.g., 'base.color.blue.600')"
            },
            "sourceFile": {
              "type": "string",
              "description": "Source file path relative to project root"
            },
            "transformations": {
              "type": "array",
              "description": "Ordered list of transformations applied",
              "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "path:remove-semantic",
                      "path:remove-default",
                      "path:rename",
                      "path:humancase",
                      "path:remove-static",
                      "type:remap",
                      "value:resolve-reference",
                      "value:lineheight-percent",
                      "value:color-hex",
                      "value:fluid"
                    ]
                  },
                  "removed": {
                    "type": "string",
                    "description": "For path:remove-* - the removed segment"
                  },
                  "from": {
                    "type": "string",
                    "description": "For path:rename or type:remap - original value"
                  },
                  "to": {
                    "type": "string",
                    "description": "For path:rename or type:remap - transformed value"
                  },
                  "originalReference": {
                    "type": "string",
                    "description": "For value:resolve-reference - the original reference string"
                  },
                  "resolvedValue": {
                    "description": "For value:resolve-reference - the resolved value"
                  }
                }
              }
            },
            "metadata": {
              "type": "object",
              "description": "Preserved token metadata ($description, $fluid, etc.)",
              "properties": {
                "$description": {
                  "type": "string"
                },
                "$fluid": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}
